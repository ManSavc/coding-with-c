/* Input  numbers from user and calculate max, min or avg*/
#include <stdio.h>
#include <string.h>
#include <math.h>

int max,min, num[], qan, x, j=1, i, sum;
char letter;
float xf,av;
int maksi();
int mini();
int avi();

int main()
{
    printf("Enter what you want to do , to find \n"
           "maximum value press 'x'\n"
           "average value press 'a'\n"
           "minimum value press 'n' \n\r ");
    scanf("%c", &letter);
    printf("leterr is %c ", letter);
    if (letter == 120)
    {
        printf("\t--maximum-- \n\r");
        maksi();
    }
    else if (letter == 110)
    {
        printf("\t--minimum--\n\r");
        mini();
    }
    else if (letter == 97)
    {
        printf("\t--average--\n\r");
        avi();
    }
    else
        printf("wrong choice");

    if (letter == 120)
        printf("\nMaximum------- = %d\n", max);
    else if (letter == 110)
        printf("\nMinimum------- = %d\n", min);
    else if (letter == 97)
        printf("\navarege------ = %.2f\n", av);//.2f means 2 digits after point

    printf("\nPress any key.......");
    getch( );
    return 0;
}

int maksi()
{
    printf("Enter how much numbers you calculate?:\n ");
    scanf("%d", &qan);
    x=qan;//for 'for' loop, because something wrong withuot 'x'
    printf("print number of qantity %d \n ", qan);
    //scan number 'i'
    for(i=1; i <= x; i++)
    {
        printf("print number %d  ", i);
        scanf("%d", &num[i]);
    }
    // print num 'i'
    for(i=1; i <= x; i++)
    {
        printf("number %d = %d\n",i, num[i]);
    }
    //find max value
    printf("max before cycle  %d", max);
    j=1;
    while(j<=x)
    {
        printf("\n  cycle number %d \n", j);
        printf("\n\n  'max' will be %d , num*j* will be %d", max, num[j]);
        if (max > num[j])
            max = max;
        else
            max = num[j];
        j++;
    }
    return max;
}



int mini()
{
    printf("Enter how much numbers you calculate?:\n ");
    scanf("%d", &qan);
    x=qan;
    printf("print number of qantity %d \n ", qan);
    //scan value of number 'i'
    for(i=1; i <= x; i++)
    {
        printf("print number %d  ", i);
        scanf("%d", &num[i]);
    }
    //print numbers of 'i'
    for(i=1; i <= x; i++)
    {
        printf("number %d = %d",i, num[i]);
    }

    //search minimum value
    printf("\n 'min' before cycle %d", min);
    j=1;
    while(j<=x)
    {
        printf("\n  cycle number %d \n", j);
        printf("\n\n  'min' will be %d , num*j* will be %d", min, num[j]);

        if (min < num[j])
        {
            min = min;;
        }
        else
            min = num[j];
        j++;
    }
    return min;

}

int avi()
{
    printf("Enter how much numbers you calculate?:\n ");
    scanf("%d", &qan);
    x=qan;
    xf = qan; //for float, making one of the ints a float,
    //you will get floating point division

    printf("print number of qantity %d \n ", qan);
    //scan value of number 'i'
    for(i=1; i <= x; i++)
    {
        printf("print number %d  ", i);
        scanf("%d", &num[i]);
    }
    //print numbers of 'i'
    for(i=1; i <= x; i++)
    {
        printf("number %d = %d",i, num[i]);
    }
    //search average value
    printf("\n 'av' before cycle %f", av);
    j=1;
    sum = 0;
    while(j<=x)
    {
        sum = sum + num[j];
        j++;
    }
    printf("\n suma %d", sum);
    av = sum / xf;
    return av;

}

