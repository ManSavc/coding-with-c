//program, which says entered digit is positive or negative. if negative, print to postive.
#include <stdio.h>
#include <stdlib.h>

int main( )
{
int ch;
printf("Enter the digit\n");
printf("If you want to cancel, push '0' digit.\n");
scanf("%d", &ch);
printf("digit %d", ch);
if (ch < 0)

    printf("\tnegative number,  positive will be %d ", ch*(-1));

    else if (ch == 0)
exit(0);
else if( ch>0 )
printf("\n positive");

else
    printf("bad symbol");

printf("\n finishing, press any key...");
 getch();
return 0;
}
