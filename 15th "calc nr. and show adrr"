/*program calculates the numbers of enterd word
and show the adress of every symbols, don't forget
that all strings ends with \0 sybol*/

#include <stdio.h>

int word();
char name[99];
int i;
int main()
{


    word();
    short a=0;
    printf(" i = %d \n", i);
    printf(" Address | Data | Size | Comment\n");
    printf(" ---------|----------|------|--------\n");
    for(a=0; a<=i; a++)
    {
        printf(" %08p | %8c | %4d | name[%d]\n",
               &name[a],name[a],sizeof(char),a);
    }
    return 0;
}

int word()
{
    printf("Enter the any word ; \n");
    scanf("%s", &name);
    printf("word is %s \n", name);
    printf("lengt of word %d", strlen(name));
    i = strlen(name);
    return i;
}



